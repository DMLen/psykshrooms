<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- psychite tea -->
  <RecipeDef>
    <defName>Psykshroom_Make_PsychiteTea</defName>
    <label>make psychite tea from psykcaps</label>
    <description>Make a psychite tea from psykcaps.</description>
    <jobString>Making a psychite tea from psykcaps.</jobString>

    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <workSkill>Cooking</workSkill>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
	<workAmount>400</workAmount>
    <recipeUsers>
      <li>Campfire</li>
    	<li>ElectricStove</li>
    	<li>FueledStove</li>
    </recipeUsers>

    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawPsykcaps</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
    </ingredients>

    <fixedIngredientFilter>
      <thingDefs>
        <li>RawPsykcaps</li>
      </thingDefs>
    </fixedIngredientFilter>

    <products>
      <PsychiteTea>1</PsychiteTea>
    </products>

	<researchPrerequisite>PsychoidBrewing</researchPrerequisite>

    <skillRequirements>
      <Cooking>2</Cooking>
    </skillRequirements>
  </RecipeDef>

